{
  "name": "twitter-dashboard",
  "version": "0.0.3",
  "description": "quality of life dashboard for twitter-2",
  "homepage": "https://github.com/yassghn/twitter-dashboard",
  "bugs": "https://github.com/yassghn/twitter-dashboard/issues",
  "author": "yasgghn@protonmail.com",
  "license": "SEE LICENSE IN license",
  "main": "_build.js",
  "type": "module",
  "keywords": [
    "twitter",
    "x",
    "dashboard",
    "firefox",
    "addon",
    "extension"
  ],
  "scripts": {
    "build": "npm run rollup && node _build.js -b",
    "clean": "node _build.js -c",
    "cleanbuild": "npm run clean && npm run build",
    "start": "web-ext run",
    "package": "npm run clean && npm run build && web-ext build",
    "rollup": "rollup -c rollup.config.mjs",
    "watch": "npm-watch build",
    "test": "test"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/**",
        "resources/**"
      ],
      "extensions": [
        "js",
        "mjs",
        "html",
        "scss",
        "json"
      ],
      "quiet": true,
      "delay": 3000
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "fs-extra": "^11.3.0",
    "minimist": "^1.2.8",
    "npm-watch": "^0.13.0",
    "rollup": "^4.34.8",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "sass": "^1.85.1",
    "web-ext": "^8.4.0"
  },
  "dependencies": {
    "jquery": "^3.7.1",
    "sanitize-html": "^2.14.0"
  }
}
